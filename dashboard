    <script>
        let items = [];
        let filters = new Set();
        let archivedIds = JSON.parse(localStorage.getItem('archivedIds')||'[]');

        function applyFilters(list) {
            let out = list.filter(i => {
                if (filters.has('rating-5') && i.rating !== 5) return false;
                if (filters.has('rating-4') && i.rating < 4) return false;
                if (filters.has('positive') && i.rating < 4) return false;
                if (filters.has('negative') && i.rating >= 4) return false;
                for (const f of filters) {
                    if (f.startsWith('aspect-')) {
                        const a = f.split('-')[1];
                        const text = (i.text_content||'').toLowerCase();
                        const map = {
                            'Кухня': ['вкус','еда','блюдо','повар'],
                            'Сервис': ['официант','персонал','сервис','обслужив'],
                            'Атмосфера': ['атмосфер','музык','уют','шум'],
                            'Чистота': ['гряз','чист','уборк','туалет'],
                            'Напитки': ['кофе','чай','напит','барист']
                        };
                        const kws = map[a]||[];
                        if (!kws.some(k=>text.includes(k))) return false;
                    }
                }
                if (archivedIds.includes(i.id)) return false;
                return true;
            });
            return out;
        }

        function renderList() {
            const list = document.getElementById('list');
            list.innerHTML = '';
            const shown = applyFilters(items);
            
            if (shown.length === 0) {
                list.innerHTML = '<div class="text-center text-slate-500 py-10">Нет отзывов по выбранным фильтрам</div>';
                return;
            }

            shown.forEach(i => {
                const div = document.createElement('div');
                div.className = 'glass-panel rounded-2xl p-5 hover:bg-white/5 transition-colors group relative';
                
                const statusOk = i.ai_reply && i.ai_reply !== 'Pending';
                const [sum, ans] = (i.ai_reply||'').split('|');
                
                const badgeClass = statusOk 
                    ? 'bg-emerald-500/10 text-emerald-300 border-emerald-500/20' 
                    : 'bg-amber-500/10 text-amber-300 border-amber-500/20';

                div.innerHTML = `
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-3">
                            <span class="font-mono text-xs text-slate-500 bg-black/20 px-2 py-1 rounded">#${i.id.slice(0,8)}</span>
                            <span class="text-xs font-semibold px-2 py-1 rounded border ${badgeClass}">
                                ${statusOk ? 'Обработано' : 'В ожидании'}
                            </span>
                        </div>
                        <div class="font-display font-bold text-xl text-peach">${i.rating} <span class="text-sm text-slate-500">/ 5</span></div>
                    </div>
                    
                    <div class="text-slate-200 text-sm leading-relaxed mb-4">
                        "${(sum||i.text_content||'').replace(/</g,'&lt;')}"
                    </div>

                    ${statusOk ? `
                    <div class="bg-white/5 rounded-xl p-4 border border-white/5 mt-2">
                        <div class="flex items-center gap-2 mb-2 text-xs font-medium text-peach uppercase tracking-wide">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                            AI Ответ
                        </div>
                        <div class="text-sm text-slate-300">${(ans||'').replace(/</g,'&lt;')}</div>
                    </div>
                    ` : ''}

                    <div class="flex justify-end gap-3 mt-4 opacity-0 group-hover:opacity-100 transition-opacity">
                         <button class="text-xs text-slate-400 hover:text-white transition-colors" data-archive="${i.id}">В архив</button>
                    </div>
                `;
                list.appendChild(div);
            });
        }

        function renderArchive() {
            const cont = document.getElementById('archived');
            cont.innerHTML = '';
            const ar = items.filter(i=>archivedIds.includes(i.id));
            if (ar.length === 0) {
                cont.innerHTML = '<div class="text-center text-slate-500 py-10">Архив пуст</div>';
                return;
            }
            ar.forEach(i=>{
                const d=document.createElement('div');
                d.className='glass-panel rounded-xl p-4 opacity-75';
                d.innerHTML = `<div class="flex justify-between mb-2"><span class="font-mono text-xs text-slate-500">#${i.id.slice(0,8)}</span><span class="font-bold text-peach">${i.rating}</span></div><div class="text-sm text-slate-400 line-clamp-2">${(i.text_content||'').replace(/</g,'&lt;')}</div>`;
                cont.appendChild(d);
            });
        }

        async function fetchReviews() {
            try {
                const res = await fetch('/reviews');
                const data = await res.json();
                items = data.items||[];
                
                const avg = items.length ? (items.reduce((a,b)=>a+b.rating,0)/items.length) : 0;
                const prev = parseFloat(localStorage.getItem('healthPrev')||avg);
                localStorage.setItem('healthPrev', avg.toFixed(1));
                const delta = (avg - prev).toFixed(1);
                
                const scoreEl = document.getElementById('healthScore');
                const deltaEl = document.getElementById('healthDelta');
                
                scoreEl.textContent = avg.toFixed(1);
                deltaEl.textContent = (delta>=0? '+' : '') + delta;
                
                if (delta > 0) {
                    deltaEl.className = 'text-sm font-medium px-2 py-0.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400';
                } else if (delta < 0) {
                     deltaEl.className = 'text-sm font-medium px-2 py-0.5 rounded-full bg-rose-500/10 border border-rose-500/20 text-rose-400';
                } else {
                     deltaEl.className = 'text-sm font-medium px-2 py-0.5 rounded-full bg-slate-500/10 border border-slate-500/20 text-slate-400';
                }

                drawRadar(items);
                renderList();
                renderArchive();
                buildInsight(items);
            } catch (e) {
                console.error("Failed to fetch reviews", e);
            }
        }

        function drawRadar(list) {
            const axes = (document.getElementById('axes').value||'Кухня,Сервис,Атмосфера,Чистота,Напитки').split(',').map(s=>s.trim()).filter(Boolean);
            const ctx = document.getElementById('radar').getContext('2d');
            
            const w = 400, h = 350;
            const cx=w/2, cy=h/2, r=120;
            
            ctx.clearRect(0,0,w,h);
            
            const scores = axes.map(a=>{
                const kws = {
                  'Кухня': ['вкус','еда','блюдо','повар'],
                  'Сервис': ['официант','персонал','сервис','обслужив'],
                  'Атмосфера': ['атмосфер','музык','уют','шум'],
                  'Чистота': ['гряз','чист','уборк','туалет'],
                  'Напитки': ['кофе','чай','напит','барист']
                }[a] || [];
                let hits=0, total=0;
                list.forEach(i=>{
                  const t=(i.text_content||'').toLowerCase();
                  if (kws.some(k=>t.includes(k))) { hits+=i.rating; total+=5; }
                });
                const v = total? (hits/total)*5 : 2.5; 
                return Math.max(0.5, Math.min(5, v));
            });

            ctx.strokeStyle='rgba(255, 255, 255, 0.1)'; 
            ctx.lineWidth=1;
            for(let ring=1; ring<=5; ring++){ 
                ctx.beginPath(); 
                ctx.arc(cx,cy,(r/5)*ring,0,Math.PI*2); 
                ctx.stroke(); 
            }

            ctx.beginPath();
            axes.forEach((_, idx) => {
                 const ang = (Math.PI*2)*(idx/axes.length) - Math.PI/2;
                 const x = cx + r*Math.cos(ang);
                 const y = cy + r*Math.sin(ang);
                 ctx.moveTo(cx, cy);
                 ctx.lineTo(x, y);
            });
            ctx.stroke();

            const pts = axes.map((a,idx)=>{
                const ang = (Math.PI*2)*(idx/axes.length) - Math.PI/2;
                const pr = (scores[idx]/5)*r;
                const x = cx + pr*Math.cos(ang);
                const y = cy + pr*Math.sin(ang);
                return {x,y,ang,label:a};
            });

            ctx.beginPath();
            pts.forEach((p,idx)=>{ if(idx===0) ctx.moveTo(p.x,p.y); else ctx.lineTo(p.x,p.y); });
            ctx.closePath(); 
            
            const gradient = ctx.createRadialGradient(cx, cy, 0, cx, cy, r);
            gradient.addColorStop(0, 'rgba(255, 204, 179, 0.4)');
            gradient.addColorStop(1, 'rgba(255, 204, 179, 0.1)');
            
            ctx.fillStyle = gradient;
            ctx.fill();
            
            ctx.strokeStyle = '#FFCCB3'; 
            ctx.lineWidth = 3; 
            ctx.stroke();

            ctx.fillStyle = '#fff';
            ctx.font = '12px Inter';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';

            pts.forEach(p=>{
                ctx.beginPath(); ctx.arc(p.x,p.y,4,0,Math.PI*2); ctx.fillStyle='#FFCCB3'; ctx.fill();
                
                const lx = cx + (r+24)*Math.cos(p.ang);
                const ly = cy + (r+24)*Math.sin(p.ang);
                ctx.fillStyle = 'rgba(255,255,255,0.7)';
                ctx.fillText(p.label, lx, ly);
            });

            const canvas = document.getElementById('radar');
            canvas.onclick = function(ev){
                const rect = canvas.getBoundingClientRect();
                const scaleX = canvas.width / rect.width;
                const scaleY = canvas.height / rect.height;
                const mx = (ev.clientX - rect.left) * scaleX;
                const my = (ev.clientY - rect.top) * scaleY;
                
                let nearest = {idx:0, dist:1e9};
                pts.forEach((p,idx)=>{
                  const axisTipX = cx + r*Math.cos(p.ang);
                  const axisTipY = cy + r*Math.sin(p.ang);
                  const d = Math.hypot(mx-axisTipX, my-axisTipY);
                  if (d < nearest.dist) nearest = {idx, dist:d};
                });
                
                filters.clear();
                filters.add('aspect-' + axes[nearest.idx]);
                
                document.querySelectorAll('.pill').forEach(el=>el.classList.remove('active'));
                const pill = document.querySelector(`[data-filter="aspect-${axes[nearest.idx]}"]`);
                if(pill) pill.classList.add('active');
                
                renderList();
            };
        }

        function buildInsight(list) {
            let waitComplaints = 0, total= list.length;
            list.forEach(i=>{ const t=(i.text_content||'').toLowerCase(); if (t.includes('ждал')||t.includes('очеред')) waitComplaints++; });
            const pct = total? Math.round((waitComplaints/total)*100) : 0;
            const text = `⚠️ Проблема: Жалобы на ожидание выросли на ${pct}%. Решение: Выведите дополнительного бариста в смену в часы пик.`;
            document.getElementById('insightText').textContent = text;
        }

        document.getElementById('refresh').addEventListener('click', fetchReviews);
        
        document.querySelectorAll('.pill').forEach(el=>{
            el.onclick = function(){
                const key = el.getAttribute('data-filter');
                if (filters.has(key)) filters.delete(key); else filters.add(key);
                el.classList.toggle('active');
                renderList();
            };
        });
        
        document.querySelectorAll('.tab-btn').forEach(el=>{
            el.onclick = function(){
                document.querySelectorAll('.tab-btn').forEach(x=>x.classList.remove('active'));
                el.classList.add('active');
                const tab = el.getAttribute('data-tab');
                
                document.getElementById('feed').classList.toggle('hidden', tab!=='feed');
                document.getElementById('feed').classList.toggle('flex', tab==='feed');
                
                document.getElementById('settings').classList.toggle('hidden', tab!=='settings');
                document.getElementById('archive').classList.toggle('hidden', tab!=='archive');
            };
        });

        document.addEventListener('click', function(ev){
            const t = ev.target;
            if (t.hasAttribute('data-archive')) {
                const id = t.getAttribute('data-archive');
                if (!archivedIds.includes(id)) archivedIds.push(id);
                localStorage.setItem('archivedIds', JSON.stringify(archivedIds));
                renderList();
                renderArchive();
            }
        });

        document.querySelector('[data-tab="feed"]').click();
        
        fetchReviews();
    </script>
</body>
</html>
